<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Is disable</th>
      <th>Skills</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.address %></td>
        <td><%= person.gender %></td>
        <td><%= person.age %></td>
        <td><%= person.country %></td>
        <td><%= person.state %></td>
        <td><%= person.city %></td>
        <td><%= person.is_disable %></td>
        <td><%= person.skills %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

