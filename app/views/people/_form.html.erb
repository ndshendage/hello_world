<div class="person-form">
<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label ><%= "Name"%>:</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label ><%= "Address"%>:</label>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <label ><%= "Gender"%>:</label><%= f.select :gender, [ ["Sex", ""], ["Male", "male"], ["Female", "female"]] %>
  </div> 
  
  <div class="field">
    <label ><%= "Age"%>:</label><%= f.number_field :age, step: :any %>
  </div>
  <div class="field">
    <label ><%= "Caste"%>:</label><%= f.collection_select :caste, @castes, :id, :name %>
  </div>
  <div class="field date-align">
    <label ><%= "Birthdate"%>:</label><%= f.date_select :birthdate, start_year: 1990, end_year: 2026, order: [:day, :month, :year] %>
  </div>
  <div class="field">
    <label ><%= "Country"%>:</label><%= f.text_field :country %>
  </div>
  
 
  <div class="field">
    <label ><%= "State"%>:</label><%= f.text_field :state %>
  </div>
  <div class="field">
    <label ><%= "City"%>:</label><%= f.text_field :city %>
  </div>
  <div class="radio-btns">
  <label ><%= "Are You disable"%>:</label>
  <%= f.radio_button :is_disable, "yes"%>
  <%= f.label :is_disable, "Yes"%>
  <%= f.radio_button :is_disable, "no"%>
  <%= f.label :is_disable, "No"%>
  </div>
  <br>
  <div class="field full-width">
    <label><%= f.check_box :terms, required: true %><%= "I have read your conditions and terms and going to accept it"%>
    </label>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
