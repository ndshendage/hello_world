<div class="well well-sm text-center">
<h3 >List of Posts</h3>
</div>
<div class="post-ajax">
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.comment %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Create New Post', new_post_path, remote: true, class: 'btn btn-block btn-success' %>
<div id="product-modal" class="modal fade"></div>