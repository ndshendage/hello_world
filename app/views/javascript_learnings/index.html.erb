<div class="well well-sm text-center">
<h3 >List of Useful Javascript Functions</h3>
</div>
<div class="pull-right button-strip">
  <%= link_to 'Learn Javascript Here', javascript_demos_javascript_learnings_path ,class: 'btn btn-success btn-under-well'%>
  <%= link_to 'Go To Dom Manipulation', dom_manipulation_javascript_learnings_path ,class: 'btn btn-success btn-under-well'%>
  <%= link_to 'Oder Desc', sorted_javascript_learnings_path(id: "id", order: @order_params) ,class: 'btn btn-success btn-under-well', remote: true, id: "order", order: @order_params%>
</div>
<table class="table table-striped table-bordered" id="function-table">
  <thead>
    <tr>
    <th>Id</th>
      <th>Function name</th>
      <th>Description</th>
      <th>Minimum</th>
      <th>Maximum</th>
      <th class="text-center">Show</th>
      <th class="text-center">Edit</th>
      <th class="text-center">Delete</th>
    </tr>
  </thead>

  <tbody id="function-data">
    <% @javascript_learnings.each do |javascript_learning| %>
      <tr>
      <td><%= javascript_learning.id %></td>
        <td><%= javascript_learning.function_name %></td>
        <td><%= javascript_learning.description %></td>
        <td><%= javascript_learning.maximum %></td>
        <td><%= javascript_learning.minimum %></td>
        <td class="text-center"><%= link_to 'Show', javascript_learning, class: 'btn btn-info' %></td>
        <td class="text-center"><%= link_to 'Edit', edit_javascript_learning_path(javascript_learning), class: 'btn btn-primary' %></td>
        <td class="text-center"><%= link_to 'Destroy', javascript_learning, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="well well-sm">
<%= link_to 'Add New Javscript Functions', new_javascript_learning_path, class: "btn btn-block btn-success" %>
</div>
<div class="well well-sm">
<%= link_to 'Learn Bootstrap Dropdown',navigation_dropdown_javascript_learnings_path, class: "btn btn-block btn-primary" %>
</div>
<%= link_to 'Javascript From W3Schools',w3schools_javascript_learnings_path, class: "btn btn-block btn-primary" %>
</div>
<div class="well well-sm pull-left" style="width: 100%;">
<div>
  <h4 class="text-center">Manipulate Table colors</h4>
  <button class="but" id="all-header" >Change all heading</button>
  <button class="but" id="all-odd">Change all heading</button>
  <button class="but" id="all-even">Change all heading</button>
  <button class="but" id="all-header">Change all heading</button>
</div>
</div>
