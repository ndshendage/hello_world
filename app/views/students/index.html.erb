<div class="well well-sm text-center">
<h3>List of Students</h3>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Age</th>
      <th>Resume</th>
      <th>Video</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.gender %></td>
        <td><%= student.address %></td>
        <td><%= student.age %></td>
        <td><%= student.resume_url.to_s.split('/').pop() %></td>
        <% if (student.video.present?)%>
        <td><%= student.video_url.to_s.split('/').pop() %></td>
        <% else%>
        <td></td>
        <%end%>
        <td><%= link_to 'Show', student, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

